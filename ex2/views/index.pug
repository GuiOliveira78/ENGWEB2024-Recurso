extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1
        span Lista de Livros

    br
    .w3-container
        table.w3-table-all(style="width:100%")
          tr
            th(style="width: 50px;") ID
            th Title
            th Author
            th Publish Date
            th Pages
          each livro in lLivros
            tr
              td 
                a(href="/" + livro._id)= livro._id
              td= livro.title
              td
                ul
                  each author in livro.author
                    li= author
              td= livro.publishDate
              td= livro.pages

    br
    footer.w3-container.w3-blue
        h5 Gerado por Guilherme Oliveira in #{data}
